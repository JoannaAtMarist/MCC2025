<!doctype html>
<html lang="en">

<head>
  <base href="{{ '/' | url }}">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover">

  <title>{{ title or "Marist Computing Conference" }}</title>

  <!-- Styles -->
  <link rel="stylesheet" href="{{ '/assets/css/layout.css' | url }}">
  <link rel="stylesheet" href="{{ '/assets/css/sections.css' | url }}">
  <link rel="stylesheet" href="{{ '/assets/css/mobile.css' | url }}">
  <link rel="stylesheet" href="{{ '/assets/css/branding.css' | url }}">

  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&family=Source+Serif+4:wght@400;600&display=swap"
    rel="stylesheet">

  <meta name="description" content="Marist Computing Conference — November 7, 2025 — Murray Student Center">

</head>

<body>

  <a href="#main" class="skip-link">Skip to content</a>

  <!-- Row 1: Logo bar -->
  <div class="logo-bar">
    <div class="container">
      <img src="{{ '/assets/images/marist-logo.jpg' | url }}" alt="Marist University logo" class="logo-img">
    </div>
  </div>

  <!-- Row 2: Nav bar -->
  <nav class="site-header">
    <button class="nav-toggle" aria-label="Toggle navigation">☰</button>
    <div class="container site-nav">

      <!-- Left: MCC logo -->
      <a href="/" class="nav-logo">
        <img src="{{ '/assets/images/MCC-Logo-notext-2025.png' | url }}" alt="Marist Computing Conference Logo"
          style="height:60px; vertical-align:middle;">
      </a>

      <div class="dropdown">
        <a href="{{ '/program/' | url }}">Program</a>
        <div class="dropdown-menu">
          <a href="{{ '/program/' | url }}">MCC Schedule</a>
          <a href="{{ '/program/at-a-glance/' | url }}">At-a-Glance</a>
          <a href="{{ '/program/keynote/' | url }}">Keynote Speaker</a>
        </div>
      </div>

      <div class="dropdown">
        <a href="{{ '/venue/' | url }}">Venue</a>
        <div class="dropdown-menu">
          <a href="{{ '/venue/campus-map' | url }}">Campus Map</a>
          <a href="{{ '/venue/directions-and-parking' | url }}">Directions & Parking</a>
        </div>
      </div>

      <a href="{{ '/call-for-papers/' | url }}">Call for Papers</a>
      <a href="{{ '/registration/' | url }}">Registration</a>
      <a href="{{ '/about/' | url }}">About</a>
    </div>
  </nav>

  <main id="main" class="container">
    {{ content | linkRegister |linkTechMeet | linkNewEra | safe }}
  </main>

  <!-- Organizer (ECC) -->
  <section class="organizer container">
    <h2>Sponsored By</h2>
    <div class="organizer-logo">
      <a href="https://ecc.marist.edu/" target="_blank" rel="noopener noreferrer">
        <img src="/MCC2025/assets/sponsors/ecc.png" alt="Enterprise Computing Community Logo">
      </a>
      <h4>Enterprise Computing Community
        <h4 />
    </div>
  </section>

  <!-- Partner Organizations -->
  <section class="sponsors container">
    <h2>Partner Organizations</h2>
    <div class="sponsor-logos">
      <div class="logo-box">
        <a href="https://www.acm.org/" target="_blank" rel="noopener noreferrer">
          <img src="/MCC2025/assets/sponsors/acm.svg" alt="ACM Logo">
        </a>
      </div>
      <div class="logo-box">
        <a href="https://www.ibm.com/" target="_blank" rel="noopener noreferrer">
          <img src="/MCC2025/assets/sponsors/ibm.png" alt="IBM Logo">
        </a>
      </div>
      <div class="logo-box">
        <a href="https://www.ieee.org/" target="_blank" rel="noopener noreferrer">
          <img src="/MCC2025/assets/sponsors/ieee.png" alt="IEEE Logo">
        </a>
      </div>
      <div class="logo-box">
        <a href="https://www.neweratech.com/us/" target="_blank" rel="noopener noreferrer">
          <img src="/MCC2025/assets/sponsors/newera.svg" alt="New Era Technologies Logo">
        </a>
      </div>
      <div class="logo-box">
        <a href="https://www.sentricus.com/" target="_blank" rel="noopener noreferrer">
          <img src="/MCC2025/assets/sponsors/sentricus.webp" alt="Sentricus Logo">
        </a>
      </div>
      <div class="logo-box">
        <a href="https://bit.ly/mhvtm-2025" target="_blank" rel="noopener noreferrer">
          <img src="/MCC2025/assets/sponsors/techmeet.avif" alt="TechMeet Logo">
        </a>
      </div>
    </div>
  </section>

  <footer class="site-footer">
    <div class="container">
      <p>© 2025 School of Computer Science & Mathematics, Marist University.
        <span style="color: var(--dark-gray);">
          Contact: <a href="mailto:School.CSM@marist.edu"
            style="color: var(--dark-gray); text-decoration: underline;">School.CSM@marist.edu</a>
        </span>
      </p>
    </div>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const toggle = document.querySelector(".nav-toggle");
      const nav = document.querySelector(".site-nav");
      toggle.addEventListener("click", () => {
        nav.classList.toggle("open");
      });
    });
  </script>

</body>

</html>